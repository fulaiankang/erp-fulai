{
  "name": "erp-fulai",
  "version": "1.0.0",
  "description": "Lightweight ERP solution for clothing manufacturing inventory management",
  "main": "app.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node app.js",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "build-all": "npm run install-all && npm run build"
  },
  "keywords": ["erp", "inventory", "clothing", "manufacturing", "serverless"],
  "author": "Fikry",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "^5.1.6",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}